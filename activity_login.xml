<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/verifyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Đăng nhập"
        android:textSize="18dp"
        android:textColor="#118C7E"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <RelativeLayout
        android:id="@+id/phoneRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verifyTV"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/countryCodeET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+84"/>

        <EditText
            android:id="@+id/loginPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryCodeET"
            android:hint="Số điện thoại"
            />

        <EditText
            android:id="@+id/loginPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginPhoneNumber"
            android:hint="Mật khẩu"
            />


    </RelativeLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:layout_below="@+id/phoneRL"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>